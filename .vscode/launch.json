{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "st-link local",
            "cwd": "${workspaceRoot}",
            "executable": "./build/TraceSWO.elf",
            "request": "launch",
            "type": "cortex-debug",
            // "runToEntryPoint": "main",
            "servertype": "openocd",
            "serverpath": "C:/Program Files/xpack-openocd-0.12.0-4/bin/openocd.exe",
            "device": "STM32F103C8",
            "interface": "swd",
            "configFiles": [
                "interface/stlink.cfg",
                // "target/ch32f1x.cfg",    // For GD32F103
                "target/stm32f1x.cfg"
            ],
            "svdFile": "${workspaceRoot}/.vscode/STM32F103.svd",
            "showDevDebugOutput": "none",
            "swoConfig":{
                "enabled":true,
                "source":"probe",
                "swoFrequency": 2250000,
                "cpuFrequency":72000000,
                "decoders": [
                    {
                        "port": 0,
                        "label": "Info",
                        "type": "console",
                        "encoding":"ascii",
                        "showOnStartup": true,
                        "timestamp": true,
                    },
                    {
                        "port": 1,
                        "label": "Warnings",
                        "type": "console",
                        "encoding":"ascii",
                        "showOnStartup": true,
                        "timestamp": true,
                    },
                    {
                        "port": 2,
                        "label": "Errors",
                        "type": "console",
                        "encoding":"ascii",
                        "showOnStartup": true,
                        "timestamp": true,
                    },
                    {
                        "port": 3,
                        "type": "graph",
                        "encoding":"signed",
                        "graphId": "1",
                        "scale": 1,
                    },
                    {
                        "port": 4,
                        "type": "graph",
                        "encoding":"signed",
                        "graphId": "2",
                        "scale": 1,
                    },
                    {
                        "port": 5,
                        "type": "graph",
                        "encoding":"signed",
                        "graphId": "3",
                        "scale": 1,
                    },
                ]
            },
            "graphConfig": [
                {
                    "label": "CPU time",
                    "timespan": 30,
                    "type": "realtime",
                    "annotate": false,
                    "maximum": 100,
                    "minimum": -100,
                    "plots": [
                        {
                            "graphId": "1",
                            "label": "sin(x)",
                            "color": "#FF00FF"
                        },
                        {
                            "graphId": "2",
                            "label": "cos(x)",
                            "color": "#00FFFF"
                        },
                        {
                            "graphId": "3",
                            "label": "random",
                            "color": "#FFFF00"
                        },
                    ]
                },
            ],
            "openOCDLaunchCommands": [
                "adapter speed 4000",
                "reset_config srst_only srst_nogate connect_assert_srst",
                "set CONNECT_UNDER_RESET 1",
                // "adapter srst pulse_width 1",
                // "set CORE_RESET 1",
            ],
            "postLaunchCommands": ["-enable-pretty-printing"],
            "preLaunchTask": "Build",
        },
        {
            "name": "st-link remote",
            "cwd": "${workspaceRoot}",
            "executable": "./build/TraceSWO.elf",
            "request": "launch",
            "type": "cortex-debug",
            // "runToEntryPoint": "main",
            "servertype": "external",
            "gdbTarget": "localhost:2000",
            "serverpath": "C:/Program Files/xpack-openocd-0.12.0-4/bin/openocd.exe",
            "device": "STM32F103C8",
            "interface": "swd",
            "svdFile": "${workspaceRoot}/.vscode/STM32F103.svd",
            "showDevDebugOutput": "none",
            "preLaunchTask": "Build",
        },
    ]
}